<?xml version="1.0" encoding="utf-8"?>
<vn.kido.shop.IControl.ICardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/d_16"
    android:layout_marginTop="@dimen/d_8"
    android:layout_marginRight="@dimen/d_16"
    android:layout_marginBottom="@dimen/d_8"
    android:foreground="?android:selectableItemBackground"
    app:cardCornerRadius="@dimen/d_6"
    app:cardElevation="@dimen/d_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/d_8">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.8"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/d_4"
                    android:layout_weight="1"
                    android:scaleType="fitCenter" />

                <vn.kido.shop.IControl.ITextView
                    android:id="@+id/program"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_20"
                    android:background="@drawable/background_program"
                    android:gravity="center"
                    android:text="@string/program"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/s_11" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_8"
                android:layout_weight="7.2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <vn.kido.shop.IControl.ITextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="2"
                            android:text="Dầu ăn thánh Phồng"
                            android:textColor="@color/main_black"
                            android:textSize="@dimen/s_16"
                            app:fontName="BRYANTLG_BOLD" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <vn.kido.shop.IControl.ITextView
                                android:id="@+id/price_max"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:text="100000"
                                android:textColor="@color/main"
                                android:textSize="@dimen/s_20"
                                app:fontName="BRYANTLG_BOLD" />

                            <vn.kido.shop.IControl.ITextView
                                android:id="@+id/max_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d_4"
                                android:lines="1"
                                android:text="/chai"
                                android:textColor="@color/main_black"
                                android:textSize="@dimen/s_14"
                                app:fontName="BRYANTLG_BOLD" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <vn.kido.shop.IControl.ITextView
                                android:id="@+id/price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:text="100000"
                                android:textColor="@color/main_gray"
                                android:textSize="@dimen/s_14"
                                app:fontName="BRYANTLG_BOLD" />

                            <vn.kido.shop.IControl.ITextView
                                android:id="@+id/min_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:text="(Thùng 12 chai)"
                                android:textColor="@color/main_black"
                                android:textSize="@dimen/s_14"
                                app:fontName="BRYANTLG_BOLD" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reason_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:padding="@dimen/d_8">

            <vn.kido.shop.IControl.ITextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reason_change"
                android:textColor="@color/main_black"
                android:textSize="@dimen/s_14"
                app:fontName="BRYANTLG_BOLD" />

            <vn.kido.shop.IControl.ITextView
                android:id="@+id/reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_8"
                android:background="@drawable/background_note_retail"
                android:padding="@dimen/d_8"
                android:textColor="@color/main_black"
                android:textSize="@dimen/s_14"
                app:fontName="BRYANTLG_BOLD" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_1"
            android:background="@color/gray_300" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/d_4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d_4"
                android:layout_weight="2.8"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <vn.kido.shop.IControl.ITextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/number"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/s_14"
                    app:fontName="BRYANTLG_BOLD" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7.2"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:id="@+id/attribute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:scrollbars="none"></HorizontalScrollView>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/real_receive_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#faebeb"
            android:orientation="horizontal"
            android:padding="@dimen/d_4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d_4"
                android:layout_weight="2.8"
                android:orientation="vertical">

                <vn.kido.shop.IControl.ITextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/real_receive"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/s_14"
                    app:fontName="BRYANTLG_BOLD" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7.2">

                <HorizontalScrollView
                    android:id="@+id/attribute_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:scrollbars="none"></HorizontalScrollView>

            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/d_4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d_4"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <vn.kido.shop.IControl.ITextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_money"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/s_14"
                    app:fontName="BRYANTLG_BOLD" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <vn.kido.shop.IControl.ITextView
                    android:id="@+id/total_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="100000 VND"
                    android:textColor="@color/main"
                    android:textSize="@dimen/s_20"
                    app:fontName="BRYANTLG_BOLD" />

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/frame_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/d_4">

            <vn.kido.shop.IControl.ITextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d_4"
                android:text="@string/after_discount"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/s_14"
                app:fontName="BRYANTLG_BOLD" />

            <vn.kido.shop.IControl.ITextView
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d_4"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/s_14"
                app:fontName="BRYANTLG_BOLD" />

            <vn.kido.shop.IControl.ITextView
                android:id="@+id/after_discount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:text="100000 VND"
                android:textColor="@color/main"
                android:textSize="@dimen/s_20"
                app:fontName="BRYANTLG_BOLD" />

        </LinearLayout>

    </LinearLayout>

</vn.kido.shop.IControl.ICardView>