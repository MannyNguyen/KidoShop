<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?android:selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d_12"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.8"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/d_4"
                    android:scaleType="fitCenter" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_8"
                android:layout_weight="7.5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <vn.kido.shop.IControl.ITextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:lines="2"
                        android:textColor="@color/main_black"
                        android:textSize="@dimen/s_16"
                        app:fontName="BRYANTLG_BOLD" />

                    <ImageView
                        android:id="@+id/remove"
                        android:layout_width="@dimen/d_24"
                        android:layout_height="@dimen/d_24"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/delete_button" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_4"
                        android:layout_marginRight="@dimen/d_12"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <vn.kido.shop.IControl.ITextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text="Hạn sử dụng"
                            android:textColor="@color/main_gray"
                            android:textSize="@dimen/s_14" />

                        <vn.kido.shop.IControl.ITextView
                            android:id="@+id/expiry_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d_4"
                            android:layout_marginBottom="@dimen/d_4"
                            android:lines="1"
                            android:text="12/12/2012"
                            android:textColor="@color/main_black"
                            android:textSize="@dimen/s_14"
                            app:fontName="BRYANTLG_BOLD" />

                        <View
                            android:id="@+id/line_date"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d_1"
                            android:background="@color/gray_300" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/quantity_container"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|bottom"
                        android:background="@drawable/background_attribute"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/d_12"
                        android:paddingRight="@dimen/d_12"
                        android:paddingBottom="@dimen/d_4">

                        <vn.kido.shop.IControl.ITextView
                            android:id="@+id/min_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="thung"
                            android:textColor="@color/main_black"
                            android:textSize="@dimen/s_13"
                            app:fontName="BRYANTLG_BOLD" />

                        <vn.kido.shop.IControl.ITextView
                            android:id="@+id/quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/main_black"
                            android:textSize="@dimen/s_14"
                            app:fontName="BRYANTLG_BOLD" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <vn.kido.shop.IControl.IEdittext
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_8"
            android:background="@drawable/background_note_retail"
            android:gravity="top"
            android:hint="@string/enter_reason"
            android:lines="3"
            android:padding="@dimen/d_8"
            android:textColor="@color/gray_900"
            android:textSize="@dimen/s_12" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_1"
        android:layout_gravity="bottom"
        android:background="@color/gray_300" />

</FrameLayout>
