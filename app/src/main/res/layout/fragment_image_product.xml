<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    tools:context=".Fragment.Product.ImageProductFragment">

    <FrameLayout
        android:id="@+id/outer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@color/black"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/d_16"
        android:layout_marginTop="@dimen/d_16"
        android:layout_marginRight="@dimen/d_16"
        android:layout_marginBottom="@dimen/d_16"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="@dimen/d_12">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>

            <android.support.design.widget.TabLayout
                android:id="@+id/tab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_20"
                android:layout_gravity="center_horizontal|bottom"
                app:tabIndicatorHeight="0dp">
            </android.support.design.widget.TabLayout>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>