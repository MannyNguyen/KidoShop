<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".Fragment.Cart.PromotionGiftFragment">

    <FrameLayout
        android:id="@+id/outer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@color/black"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/d_8"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/d_24"
            android:layout_height="@dimen/d_24"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/d_14"
            android:src="@drawable/ic_remove" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d_16"
            android:layout_marginTop="@dimen/d_4"
            android:layout_marginRight="@dimen/d_16"
            android:layout_marginBottom="@dimen/d_16"
            android:background="@drawable/red_border_box"
            android:clickable="true"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/d_8">

                        <vn.kido.shop.IControl.ITextView
                            android:id="@+id/txt_promotion_company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Khuyến mãi đổi quà tường an"
                            android:textAllCaps="true"
                            android:textColor="@color/main"
                            android:textSize="@dimen/s_16"
                            app:fontName="BRYANTLG_BOLD" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_tab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d_8">

                        </android.support.v7.widget.RecyclerView>

                        <vn.kido.shop.IControl.ITextView
                            android:id="@+id/txt_promotion_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/d_8"
                            android:text="Chương trình KM dầu mùa xuân vui lắm"
                            android:textAllCaps="false"
                            android:textColor="@color/main_black"
                            android:textSize="@dimen/s_16"
                            app:fontName="BRYANTLG_BOLD" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d_8"
                            android:gravity="center_vertical">

                            <vn.kido.shop.IControl.ITextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d_8"
                                android:text="@string/money_KM"
                                android:textAllCaps="false"
                                android:textColor="@color/main_black"
                                android:textSize="@dimen/s_16" />

                            <vn.kido.shop.IControl.ITextView
                                android:id="@+id/txt_money_promo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="@dimen/d_8"
                                android:text="1,000,000"
                                android:textAllCaps="false"
                                android:textColor="@color/main"
                                android:textSize="@dimen/s_18"
                                app:fontName="BRYANTLG_BOLD" />

                        </FrameLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d_1"
                        android:layout_marginLeft="@dimen/d_2"
                        android:layout_marginTop="@dimen/d_8"
                        android:layout_marginRight="@dimen/d_2"
                        android:background="@color/gray_200" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_promotion_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_8">

                    </android.support.v7.widget.RecyclerView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/d_8">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <vn.kido.shop.IControl.ITextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d_8"
                                android:text="@string/total"
                                android:textAllCaps="false"
                                android:textColor="@color/main_black"
                                android:textSize="@dimen/s_16"
                                app:fontName="BRYANTLG_BOLD" />

                            <vn.kido.shop.IControl.ITextView
                                android:id="@+id/txt_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="@dimen/d_8"
                                android:text="1,000,000"
                                android:textAllCaps="false"
                                android:textColor="@color/main"
                                android:textSize="@dimen/s_18"
                                app:fontName="BRYANTLG_BOLD" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <vn.kido.shop.IControl.ITextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d_8"
                                android:text="@string/remain_KM"
                                android:textAllCaps="false"
                                android:textColor="@color/main_black"
                                android:textSize="@dimen/s_16"
                                app:fontName="BRYANTLG_BOLD" />

                            <vn.kido.shop.IControl.ITextView
                                android:id="@+id/txt_remain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="@dimen/d_8"
                                android:text="1,000,000"
                                android:textAllCaps="false"
                                android:textColor="@color/main"
                                android:textSize="@dimen/s_18"
                                app:fontName="BRYANTLG_BOLD" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <vn.kido.shop.IControl.ITextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d_8"
                                android:text="@string/difference_can"
                                android:textAllCaps="false"
                                android:textColor="@color/main_black"
                                android:textSize="@dimen/s_16"
                                app:fontName="BRYANTLG_BOLD" />

                            <vn.kido.shop.IControl.ITextView
                                android:id="@+id/txt_difference"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="@dimen/d_8"
                                android:text="1,000,000"
                                android:textAllCaps="false"
                                android:textColor="@color/main"
                                android:textSize="@dimen/s_18"
                                app:fontName="BRYANTLG_BOLD" />

                        </FrameLayout>

                        <vn.kido.shop.IControl.ITextView
                            android:id="@+id/txt_promotion_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/d_8"
                            android:text="Bạn đã đủ điều kiện đổi quà!"
                            android:textAllCaps="false"
                            android:textColor="@color/main"
                            android:textSize="@dimen/s_16" />

                        <vn.kido.shop.IControl.IButton
                            android:id="@+id/btn_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/d_40"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/d_16"
                            android:background="@drawable/background_button_red"
                            android:paddingLeft="@dimen/d_40"
                            android:paddingRight="@dimen/d_40"
                            android:text="@string/confirm"
                            android:textColor="@color/white"
                            android:textSize="@dimen/s_14"
                            app:fontName="BRYANTLG_BOLD" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>