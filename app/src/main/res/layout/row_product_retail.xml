<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/d_2"
    android:background="@color/white"
    android:foreground="?android:selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="@dimen/d_4"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/d_4">

                <vn.kido.shop.IControl.ITextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="Ngày mua gần nhất"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/s_10" />

                <vn.kido.shop.IControl.ITextView
                    android:id="@+id/create_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="12/12/2012"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/s_12"
                    app:fontName="BRYANTLG_BOLD" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_4"
                android:layout_marginTop="@dimen/d_8"
                android:layout_marginRight="@dimen/d_4"
                android:layout_marginBottom="@dimen/d_12"
                android:layout_weight="1"
                android:orientation="vertical">

                <vn.kido.shop.IControl.ITextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="Dầu ăn thánh Phồng"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/s_17"
                    app:fontName="BRYANTLG_BOLD" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <vn.kido.shop.IControl.ITextView
                        android:id="@+id/price_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="100000"
                        android:textColor="@color/main"
                        android:textSize="@dimen/s_20"
                        app:fontName="BRYANTLG_BOLD" />

                    <vn.kido.shop.IControl.ITextView
                        android:id="@+id/max_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_4"
                        android:lines="1"
                        android:text="/chai"
                        android:textColor="@color/main_black"
                        android:textSize="@dimen/s_14"
                        app:fontName="BRYANTLG_BOLD" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <vn.kido.shop.IControl.ITextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="100000"
                        android:textColor="@color/main_gray"
                        android:textSize="@dimen/s_14"
                        app:fontName="BRYANTLG_BOLD" />

                    <vn.kido.shop.IControl.ITextView
                        android:id="@+id/min_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="(Thùng 12 chai)"
                        android:textColor="@color/main_black"
                        android:textSize="@dimen/s_14"
                        app:fontName="BRYANTLG_BOLD" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/selected"
                    android:layout_width="@dimen/d_24"
                    android:layout_height="@dimen/d_24"
                    android:layout_marginBottom="@dimen/d_12"
                    android:adjustViewBounds="true"
                    android:layout_marginRight="@dimen/d_4"
                    android:padding="@dimen/d_2"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_tick_active" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_1"
        android:layout_gravity="bottom"
        android:background="@color/gray_300" />

</FrameLayout>
