<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/d_12"
    android:layout_marginTop="@dimen/d_4"
    android:layout_marginBottom="@dimen/d_4"
    android:layout_marginRight="@dimen/d_48"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/d_44"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/chat_avatar" />

        <vn.kido.shop.IControl.ITextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_black"
            android:textSize="@dimen/s_12"
            app:fontName="BRYANTLG_BOLD" />

    </LinearLayout>

    <vn.kido.shop.IControl.ITextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_8"
        android:background="@drawable/gray_border_message_box"
        android:padding="@dimen/d_12"
        android:textColor="@color/main_black"
        android:textSize="@dimen/s_16" />

</LinearLayout>