<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Cart.ChildCartFragment">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/d_4">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>

            <vn.kido.shop.IControl.ICardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_8"
                android:layout_marginTop="@dimen/d_12"
                android:layout_marginRight="@dimen/d_8"
                android:layout_marginBottom="@dimen/d_4"
                android:foreground="?android:selectableItemBackground"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/d_6"
                app:cardElevation="@dimen/d_1">

                <LinearLayout
                    android:id="@+id/frame_gifts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/d_8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/d_4">

                        <ImageView
                            android:layout_width="@dimen/d_20"
                            android:layout_height="@dimen/d_20"
                            android:src="@drawable/ic_gift_outer_active" />

                        <vn.kido.shop.IControl.ITextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_6"
                            android:text="@string/gift_title_order"
                            android:textColor="@color/gray_700"
                            android:textSize="@dimen/s_16"
                            app:fontName="BRYANTLG_BOLD" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_gift"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>

                    <vn.kido.shop.IControl.IButton
                        android:id="@+id/sales_to_change"
                        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/d_32"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/d_8"
                        android:background="@drawable/main_box"
                        android:foreground="?android:selectableItemBackground"
                        android:gravity="center"
                        android:paddingLeft="@dimen/d_40"
                        android:paddingRight="@dimen/d_40"
                        android:text="Khuyễn mãi đổi hàng"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/s_12"
                        app:fontName="BRYANTLG_BOLD" />

                </LinearLayout>

            </vn.kido.shop.IControl.ICardView>

            <LinearLayout
                android:id="@+id/program_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_12"
                android:orientation="vertical"
                android:padding="@dimen/d_8">

                <vn.kido.shop.IControl.ITextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/suggest_program"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/d_14" />

                <vn.kido.shop.IControl.IPager
                    android:id="@+id/pager_program"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_8"></vn.kido.shop.IControl.IPager>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#faebeb"
                android:orientation="vertical"
                android:padding="@dimen/d_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/d_4">

                    <vn.kido.shop.IControl.ITextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total"
                        android:textColor="@color/gray_900"
                        android:textSize="@dimen/d_14"
                        app:fontName="BRYANTLG_BOLD" />

                    <vn.kido.shop.IControl.ITextView
                        android:id="@+id/total_money"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/main"
                        android:textSize="@dimen/d_14"
                        app:fontName="BRYANTLG_BOLD" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/d_4">

                    <vn.kido.shop.IControl.ITextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sale_group"
                        android:textColor="@color/gray_900"
                        android:textSize="@dimen/d_14"
                        app:fontName="BRYANTLG_BOLD" />

                    <vn.kido.shop.IControl.ITextView
                        android:id="@+id/total_sale_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/main"
                        android:textSize="@dimen/d_14"
                        app:fontName="BRYANTLG_BOLD" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/d_4">

                    <vn.kido.shop.IControl.ITextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sale_order"
                        android:textColor="@color/gray_900"
                        android:textSize="@dimen/d_14"
                        app:fontName="BRYANTLG_BOLD" />

                    <vn.kido.shop.IControl.ITextView
                        android:id="@+id/total_sale_order"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/main"
                        android:textSize="@dimen/d_14"
                        app:fontName="BRYANTLG_BOLD" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/d_4">

                    <vn.kido.shop.IControl.ITextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_pay"
                        android:textColor="@color/gray_900"
                        android:textSize="@dimen/d_14"
                        app:fontName="BRYANTLG_BOLD" />

                    <vn.kido.shop.IControl.ITextView
                        android:id="@+id/total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/main"
                        android:textSize="@dimen/d_14"
                        app:fontName="BRYANTLG_BOLD" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/d_4">

                    <vn.kido.shop.IControl.ITextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/score"
                        android:textColor="@color/gray_900"
                        android:textSize="@dimen/d_14"
                        app:fontName="BRYANTLG_BOLD" />

                    <vn.kido.shop.IControl.ITextView
                        android:id="@+id/total_point"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/main"
                        android:textSize="@dimen/d_14"
                        app:fontName="BRYANTLG_BOLD" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_8"
                android:layout_marginRight="@dimen/d_8">

                <vn.kido.shop.IControl.ITextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/d_12"
                    android:text="@string/vat_notice"
                    android:textColor="@color/gray_600"
                    android:textSize="@dimen/d_12" />


            </FrameLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>