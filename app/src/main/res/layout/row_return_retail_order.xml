<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/d_2"
    android:background="@color/white"
    android:foreground="?android:selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d_8"
        android:background="@drawable/background_note"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.8"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/d_4"
                    android:scaleType="fitCenter" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7.5"
                android:orientation="vertical">

                <vn.kido.shop.IControl.ITextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:padding="@dimen/d_4"
                    android:text="Dầu ăn thánh fasfa fasf fffasf afaf adfda fdasf afaf af"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/s_16"
                    app:fontName="BRYANTLG_BOLD" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/d_4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/d_8"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <vn.kido.shop.IControl.ITextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text="Hạn sử dụng"
                            android:textColor="@color/main_gray"
                            android:textSize="@dimen/s_14" />

                        <vn.kido.shop.IControl.ITextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text="12/12/2012"
                            android:textColor="@color/main_black"
                            android:textSize="@dimen/s_14"
                            app:fontName="BRYANTLG_BOLD" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/d_8">

            <vn.kido.shop.IControl.ITextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reason_change"
                android:textColor="@color/main_black"
                android:textSize="@dimen/s_14"
                app:fontName="BRYANTLG_BOLD" />

            <vn.kido.shop.IControl.ITextView
                android:id="@+id/reason_return"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_8"
                android:background="@drawable/background_note_retail"
                android:padding="@dimen/d_8"
                android:textColor="@color/main_black"
                android:textSize="@dimen/s_14"
                app:fontName="BRYANTLG_BOLD" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_1"
            android:layout_gravity="bottom"
            android:background="@color/gray_300" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/d_8">

            <vn.kido.shop.IControl.ITextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/s_16"
                app:fontName="BRYANTLG_NORMAL" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <vn.kido.shop.IControl.ITextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/s_16"
                    app:fontName="BRYANTLG_BOLD" />

                <vn.kido.shop.IControl.ITextView
                    android:id="@+id/min_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_4"
                    android:text="cái"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/s_16"
                    app:fontName="BRYANTLG_NORMAL" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>