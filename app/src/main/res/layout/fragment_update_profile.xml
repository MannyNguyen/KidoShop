<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.Profile.UpdateProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_88"
            android:background="@color/main">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/d_8"
                    android:paddingRight="@dimen/d_8">

                    <include layout="@layout/home" />

                    <vn.kido.shop.IControl.ITextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-16dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Kido Shop"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/s_14"
                        app:fontName="BRYANTLG_BOLD" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d_8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d_44"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <include layout="@layout/back" />

                        <include layout="@layout/title" />

                    </LinearLayout>

                    <include layout="@layout/search" />

                </LinearLayout>

            </LinearLayout>

        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ScrollView
                android:id="@+id/scroll_view_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/d_20">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/edit_iv_avatar"
                                android:layout_width="@dimen/d_120"
                                android:layout_height="@dimen/d_100"
                                android:src="@drawable/user_image" />

                            <vn.kido.shop.IControl.ITextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/changeimage"
                                android:textColor="@color/main_gray"
                                android:textSize="@dimen/s_12" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/d_20"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <vn.kido.shop.IControl.ITextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/last_name"
                                        android:textColor="@color/gray_600"
                                        android:textSize="@dimen/s_14" />

                                    <vn.kido.shop.IControl.IEdittext
                                        android:id="@+id/edt_edit_lastname"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/d_12"
                                        android:background="@color/white"
                                        android:text="Họ"
                                        android:textColor="@color/gray_900"
                                        android:textSize="@dimen/s_14"
                                        app:fontName="BRYANTLG_BOLD" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/d_1"
                                    android:layout_marginTop="@dimen/d_4"
                                    android:background="@color/gray_300" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <vn.kido.shop.IControl.ITextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/full_name"
                                        android:textColor="@color/main_gray"
                                        android:textSize="@dimen/s_14" />

                                    <vn.kido.shop.IControl.IEdittext
                                        android:id="@+id/edt_edit_fullname"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/d_12"
                                        android:background="@color/white"
                                        android:imeOptions="actionNext"
                                        android:inputType="text"
                                        android:textColor="@color/main_black"
                                        android:textSize="@dimen/s_14"
                                        app:fontName="BRYANTLG_BOLD" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/d_1"
                                    android:layout_marginTop="@dimen/d_4"
                                    android:background="@color/gray_300" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d_12"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <vn.kido.shop.IControl.ITextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/store"
                                        android:textColor="@color/main_gray"
                                        android:textSize="@dimen/s_14" />

                                    <vn.kido.shop.IControl.IEdittext
                                        android:id="@+id/edt_edit_shop"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/d_12"
                                        android:background="@color/white"
                                        android:imeOptions="actionNext"
                                        android:inputType="text"
                                        android:textColor="@color/main_black"
                                        android:textSize="@dimen/s_14"
                                        app:fontName="BRYANTLG_BOLD" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/d_1"
                                    android:layout_marginTop="@dimen/d_4"
                                    android:background="@color/gray_300" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/d_16">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/d_16"
                            android:paddingTop="@dimen/d_12"
                            android:paddingRight="@dimen/d_16"
                            android:paddingBottom="@dimen/d_12">

                            <vn.kido.shop.IControl.ITextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/phone_signin"
                                android:textColor="@color/main_gray"
                                android:textSize="@dimen/s_14"
                                app:fontName="BRYANTLG_NORMAL" />

                            <vn.kido.shop.IControl.ITextView
                                android:id="@+id/edt_edit_phone_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d_8"
                                android:imeOptions="actionNext"
                                android:inputType="phone"
                                android:textColor="@color/main_black"
                                android:textSize="@dimen/s_14"
                                app:fontName="BRYANTLG_BOLD" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/d_16"
                            android:paddingTop="@dimen/d_12"
                            android:paddingRight="@dimen/d_16"
                            android:paddingBottom="@dimen/d_12">

                            <vn.kido.shop.IControl.ITextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/phone_vice"
                                android:textColor="@color/main_gray"
                                android:textSize="@dimen/s_14"
                                app:fontName="BRYANTLG_NORMAL" />

                            <vn.kido.shop.IControl.IEdittext
                                android:id="@+id/edt_edit_phone_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d_8"
                                android:background="@color/white"
                                android:imeOptions="actionNext"
                                android:inputType="phone"
                                android:textColor="@color/main_black"
                                android:textSize="@dimen/s_14"
                                app:fontName="BRYANTLG_BOLD" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/d_1"
                                android:layout_marginTop="@dimen/d_2"
                                android:background="@color/gray_300" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/d_16"
                            android:paddingTop="@dimen/d_12"
                            android:paddingRight="@dimen/d_16"
                            android:paddingBottom="@dimen/d_12">

                            <vn.kido.shop.IControl.ITextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/email"
                                android:textColor="@color/main_gray"
                                android:textSize="@dimen/s_14"
                                app:fontName="BRYANTLG_NORMAL" />

                            <vn.kido.shop.IControl.IEdittext
                                android:id="@+id/edt_edit_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d_8"
                                android:background="@color/white"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/main_black"
                                android:textSize="@dimen/s_14"
                                app:fontName="BRYANTLG_BOLD" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/d_1"
                                android:layout_marginTop="@dimen/d_2"
                                android:background="@color/gray_300" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/d_16"
                            android:paddingTop="@dimen/d_12"
                            android:paddingRight="@dimen/d_16"
                            android:paddingBottom="@dimen/d_12">

                            <vn.kido.shop.IControl.ITextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/address_delivery"
                                android:textColor="@color/main_gray"
                                android:textSize="@dimen/s_14"
                                app:fontName="BRYANTLG_NORMAL" />

                            <vn.kido.shop.IControl.IEdittext
                                android:id="@+id/edt_edit_address_default"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d_8"
                                android:background="@color/white"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:textColor="@color/main_black"
                                android:textSize="@dimen/s_14"
                                app:fontName="BRYANTLG_BOLD" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/d_1"
                                android:layout_marginTop="@dimen/d_2"
                                android:background="@color/gray_300" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/d_16"
                            android:paddingTop="@dimen/d_12"
                            android:paddingRight="@dimen/d_16"
                            android:paddingBottom="@dimen/d_12">

                            <vn.kido.shop.IControl.ITextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/register_city"
                                android:textColor="@color/main_gray"
                                android:textSize="@dimen/s_14"
                                app:fontName="BRYANTLG_NORMAL" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/edit_spinner_city"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/d_28"
                                    android:background="@android:color/transparent"
                                    android:spinnerMode="dialog" />

                                <ImageView
                                    android:layout_width="@dimen/d_20"
                                    android:layout_height="@dimen/d_20"
                                    android:layout_gravity="center_vertical|right"
                                    android:src="@drawable/sort_active_down" />

                            </FrameLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/d_1"
                                android:background="@color/gray_300" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/d_16"
                            android:paddingTop="@dimen/d_8"
                            android:paddingRight="@dimen/d_16"
                            android:paddingBottom="@dimen/d_12">

                            <vn.kido.shop.IControl.ITextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/register_district"
                                android:textColor="@color/main_gray"
                                android:textSize="@dimen/s_14"
                                app:fontName="BRYANTLG_NORMAL" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/edit_spinner_district"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/d_28"
                                    android:background="@android:color/transparent"
                                    android:spinnerMode="dialog" />

                                <ImageView
                                    android:layout_width="@dimen/d_20"
                                    android:layout_height="@dimen/d_20"
                                    android:layout_gravity="center_vertical|right"
                                    android:src="@drawable/sort_active_down" />

                            </FrameLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/d_1"
                                android:background="@color/gray_300" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/d_16"
                            android:paddingTop="@dimen/d_8"
                            android:paddingRight="@dimen/d_16"
                            android:paddingBottom="@dimen/d_12">

                            <vn.kido.shop.IControl.ITextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/register_country"
                                android:textColor="@color/main_gray"
                                android:textSize="@dimen/s_14"
                                app:fontName="BRYANTLG_NORMAL" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/edit_spinner_country"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/d_28"
                                    android:background="@android:color/transparent"
                                    android:spinnerMode="dialog" />

                                <ImageView
                                    android:layout_width="@dimen/d_20"
                                    android:layout_height="@dimen/d_20"
                                    android:layout_gravity="center_vertical|right"
                                    android:src="@drawable/sort_active_down" />

                            </FrameLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/d_1"
                                android:background="@color/gray_300" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_8"
                        android:layout_marginBottom="@dimen/d_16"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_check"
                            android:layout_width="@dimen/d_24"
                            android:layout_height="@dimen/d_24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/d_4"
                            android:src="@drawable/ic_tick_uncheck" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_12"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <vn.kido.shop.IControl.ITextView
                                    android:id="@+id/agree_license_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/agree_license_1"
                                    android:textColor="@color/main_gray"
                                    android:textSize="@dimen/s_14"
                                    app:fontName="BRYANTLG_BOLD" />

                                <vn.kido.shop.IControl.ITextView
                                    android:id="@+id/agree_license_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d_4"
                                    android:text="@string/agree_license_2"
                                    android:textColor="@color/main"
                                    android:textSize="@dimen/s_16"
                                    app:fontName="BRYANTLG_BOLD" />

                                <vn.kido.shop.IControl.ITextView
                                    android:id="@+id/agree_license_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d_4"
                                    android:text="và"
                                    android:textColor="@color/main_gray"
                                    android:textSize="@dimen/s_14"
                                    app:fontName="BRYANTLG_BOLD" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <vn.kido.shop.IControl.ITextView
                                    android:id="@+id/agree_license_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/agree_license_4"
                                    android:textColor="@color/main"
                                    android:textSize="@dimen/s_16"
                                    app:fontName="BRYANTLG_BOLD" />

                                <vn.kido.shop.IControl.ITextView
                                    android:id="@+id/agree_license_5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d_4"
                                    android:text="@string/agree_license_5"
                                    android:textColor="@color/main_gray"
                                    android:textSize="@dimen/s_14"
                                    app:fontName="BRYANTLG_BOLD" />

                                <vn.kido.shop.IControl.ITextView
                                    android:id="@+id/agree_license_6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d_4"
                                    android:text="@string/agree_license_6"
                                    android:textAllCaps="true"
                                    android:textColor="@color/main"
                                    android:textSize="@dimen/s_16"
                                    app:fontName="BRYANTLG_BOLD" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <include layout="@layout/progress" />

        </FrameLayout>

        <vn.kido.shop.IControl.IButton
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_52"
            android:background="@drawable/bg_gray_square_box"
            android:gravity="center"
            android:text="@string/update"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/s_16"
            app:fontName="BRYANTLG_BOLD" />

    </LinearLayout>

</FrameLayout>