<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <vn.kido.shop.IControl.ICardView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/d_4"
        android:foreground="?android:selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/d_4"
        app:cardElevation="@dimen/d_4">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/d_4"
            android:layout_weight="1"
            android:padding="@dimen/d_8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_120"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />

                <vn.kido.shop.IControl.ITextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/d_4"
                    android:textAllCaps="true"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/s_16"
                    app:fontName="BRYANTLG_BOLD" />

            </LinearLayout>

        </FrameLayout>

    </vn.kido.shop.IControl.ICardView>

</FrameLayout>
