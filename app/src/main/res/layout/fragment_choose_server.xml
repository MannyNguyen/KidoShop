<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.OAuth.ChooseServerFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:background="@color/black"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/d_32">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/d_28"
            android:layout_height="@dimen/d_28"
            android:layout_gravity="right"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_remove" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/d_12"
            android:background="@drawable/background_update_quantity"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="@dimen/d_12">

            <vn.kido.shop.IControl.IButton
                android:id="@+id/btn_real"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="@dimen/d_160"
                android:layout_height="@dimen/d_44"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/d_12"
                android:background="@drawable/background_button_red"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="@string/real_server"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/s_16"
                app:fontName="BRYANTLG_BOLD" />

            <vn.kido.shop.IControl.IButton
                android:id="@+id/btn_dev"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="@dimen/d_160"
                android:layout_height="@dimen/d_44"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/d_12"
                android:background="@drawable/background_button_red"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="@string/dev_server"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/s_16"
                app:fontName="BRYANTLG_BOLD" />

            <vn.kido.shop.IControl.IButton
                android:id="@+id/btn_test"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="@dimen/d_160"
                android:layout_height="@dimen/d_44"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/d_12"
                android:background="@drawable/background_button_red"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="@string/test_server"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/s_16"
                app:fontName="BRYANTLG_BOLD" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>