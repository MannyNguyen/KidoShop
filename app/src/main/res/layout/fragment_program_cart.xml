<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Cart.ProgramCartFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@color/black"></FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/d_8"
        android:layout_marginTop="@dimen/d_8"
        android:layout_marginRight="@dimen/d_8"
        android:layout_marginBottom="@dimen/d_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/d_28"
                android:layout_height="@dimen/d_28"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/d_8"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_remove" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/background_program_cart"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/d_8">

                    <vn.kido.shop.IControl.ITextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/d_8"
                        android:textAllCaps="true"
                        android:textColor="@color/main"
                        android:textSize="@dimen/d_20"
                        app:fontName="BRYANTLG_BOLD" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_tab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

                    <vn.kido.shop.IControl.ITextView
                        android:id="@+id/event_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_black"
                        android:layout_marginTop="@dimen/d_8"
                        android:textSize="@dimen/s_16"
                        app:fontName="BRYANTLG_BOLD" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_8"
                        android:layout_marginTop="@dimen/d_4"
                        android:layout_marginRight="@dimen/d_8"
                        android:orientation="horizontal">

                        <vn.kido.shop.IControl.ITextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/money_KM"
                            android:textColor="@color/main_gray"
                            android:textSize="@dimen/s_16" />

                        <vn.kido.shop.IControl.ITextView
                            android:id="@+id/total_money_reward"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="1,000,000"
                            android:textColor="@color/main"
                            android:textSize="@dimen/s_20"
                            app:fontName="BRYANTLG_BOLD" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_1"
                    android:layout_marginLeft="@dimen/d_1"
                    android:layout_marginRight="@dimen/d_1"
                    android:background="@color/gray_300" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/row_program_product"></android.support.v7.widget.RecyclerView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_1"
                    android:layout_marginLeft="@dimen/d_1"
                    android:layout_marginRight="@dimen/d_1"
                    android:background="@color/gray_300" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_8"
                    android:layout_marginRight="@dimen/d_8"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/d_8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_4"
                        android:orientation="horizontal">

                        <vn.kido.shop.IControl.ITextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total"
                            android:textColor="@color/main_gray"
                            android:textSize="@dimen/s_16"
                            app:fontName="BRYANTLG_BOLD" />

                        <vn.kido.shop.IControl.ITextView
                            android:id="@+id/total_money_used"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="1,000,000"
                            android:textColor="@color/main"
                            android:textSize="@dimen/s_20"
                            app:fontName="BRYANTLG_BOLD" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_4"
                        android:orientation="horizontal">

                        <vn.kido.shop.IControl.ITextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/remain_KM"
                            android:textColor="@color/main_gray"
                            android:textSize="@dimen/s_16"
                            app:fontName="BRYANTLG_BOLD" />

                        <vn.kido.shop.IControl.ITextView
                            android:id="@+id/total_money_remain"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="1,000,000"
                            android:textColor="@color/main"
                            android:textSize="@dimen/s_20"
                            app:fontName="BRYANTLG_BOLD" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_4"
                        android:orientation="horizontal">

                        <vn.kido.shop.IControl.ITextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/difference_can"
                            android:textColor="@color/main_gray"
                            android:textSize="@dimen/s_16"
                            app:fontName="BRYANTLG_BOLD" />

                        <vn.kido.shop.IControl.ITextView
                            android:id="@+id/total_money_over_allow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="1,000,000"
                            android:textColor="@color/main"
                            android:textSize="@dimen/s_20"
                            app:fontName="BRYANTLG_BOLD" />

                    </LinearLayout>

                    <vn.kido.shop.IControl.ITextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_8"
                        android:layout_marginBottom="@dimen/d_8"
                        android:textColor="@color/main"
                        android:textSize="@dimen/s_16"
                        app:fontName="BRYANTLG_BOLD" />

                    <vn.kido.shop.IControl.IButton
                        android:id="@+id/submit"
                        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/d_40"
                        android:layout_marginTop="@dimen/d_8"
                        android:layout_gravity="center"
                        android:background="@drawable/main_box"
                        android:foreground="?android:selectableItemBackground"
                        android:gravity="center"
                        android:paddingLeft="@dimen/d_40"
                        android:paddingRight="@dimen/d_40"
                        android:text="@string/confirm"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/s_18"
                        app:fontName="BRYANTLG_BOLD" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <include layout="@layout/progress" />
    </FrameLayout>
</FrameLayout>