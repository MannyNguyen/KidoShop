<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".Fragment.Product.ChangeQuantityFragment">

    <FrameLayout
        android:id="@+id/outer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@color/black"></FrameLayout>

    <LinearLayout
        android:id="@+id/container_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/d_32"
            android:layout_height="@dimen/d_32"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/d_14"
            android:src="@drawable/ic_remove" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d_16"
            android:layout_marginTop="@dimen/d_4"
            android:layout_marginRight="@dimen/d_16"
            android:layout_marginBottom="@dimen/d_16"
            android:background="@drawable/red_border_box"
            android:clickable="true"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/d_12">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <vn.kido.shop.IControl.ITextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/d_4"
                            android:text="@string/number"
                            android:textAllCaps="true"
                            android:textColor="@color/main"
                            android:textSize="@dimen/s_20"
                            app:fontName="BRYANTLG_BOLD" />

                        <vn.kido.shop.IControl.ITextView
                            android:id="@+id/unit_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/product"
                            android:textAllCaps="true"
                            android:textColor="@color/main"
                            android:textSize="@dimen/s_20"
                            app:fontName="BRYANTLG_BOLD" />

                    </LinearLayout>

                    <vn.kido.shop.IControl.ITextView
                        android:id="@+id/txt_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="ThÃ¹ng 10 chai"
                        android:textColor="@color/main_black"
                        android:textSize="@dimen/s_16"
                        app:fontName="BRYANTLG_NORMAL" />

                </LinearLayout>

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_40"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:background="@color/main"
                    android:clickable="false" />

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/number_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_16"
                    android:layout_marginRight="@dimen/d_16"
                    android:theme="@style/NumberPicker"></com.shawnlin.numberpicker.NumberPicker>


            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_1"
                android:background="@color/gray_300" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/d_12">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <vn.kido.shop.IControl.ITextView
                            android:id="@+id/unit_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/main"
                            android:textSize="@dimen/s_16"
                            app:fontName="BRYANTLG_BOLD" />

                        <vn.kido.shop.IControl.ITextView
                            android:id="@+id/txt_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_2"
                            android:text="@string/quantity_product"
                            android:textColor="@color/main_gray"
                            android:textSize="@dimen/s_16"
                            app:fontName="BRYANTLG_BOLD" />

                    </LinearLayout>

                    <vn.kido.shop.IControl.IEdittext
                        android:id="@+id/number_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/d_60"
                        android:paddingRight="@dimen/d_8"
                        android:paddingLeft="@dimen/d_8"
                        android:paddingTop="@dimen/d_4"
                        android:paddingBottom="@dimen/d_4"
                        android:layout_gravity="right|center_vertical"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="0"
                        android:imeOptions="actionDone"
                        android:maxLength="3"
                        android:textColor="@color/main_black"
                        android:textSize="@dimen/s_16"
                        app:fontName="BRYANTLG_BOLD"
                        android:background="@drawable/border_gray_1_radius_8"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/d_8">

                    <vn.kido.shop.IControl.ITextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_payment"
                        android:textColor="@color/main_gray"
                        android:textSize="@dimen/s_16"
                        app:fontName="BRYANTLG_BOLD" />

                    <vn.kido.shop.IControl.ITextView
                        android:id="@+id/txt_total_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="0 VND"
                        android:textColor="@color/main"
                        android:textSize="@dimen/s_20"
                        app:fontName="BRYANTLG_BOLD" />

                </FrameLayout>

                <vn.kido.shop.IControl.IButton
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/d_40"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_16"
                    android:background="@drawable/background_button_red"
                    android:paddingLeft="@dimen/d_40"
                    android:paddingRight="@dimen/d_40"
                    android:text="@string/confirm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/s_14"
                    app:fontName="BRYANTLG_BOLD" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/progress" />

</FrameLayout>