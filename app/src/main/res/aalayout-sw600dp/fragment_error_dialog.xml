<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Fragment.Dialog.ErrorDialogFragment">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/d_16"
        android:background="@drawable/white_border_box"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/d_12">

        <vn.nip.kido.IControl.ITextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/error"
            android:textAllCaps="true"
            android:textColor="@color/main"
            android:textSize="@dimen/d_32"
            app:fontName="BRYANTLG_BOLD" />

        <vn.nip.kido.IControl.ITextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d_12"
            android:layout_marginTop="@dimen/d_12"
            android:text="fdsafasffdsfasffasfsaf"
            android:textColor="@color/main_black"
            android:textSize="@dimen/d_28"
            app:fontName="BRYANTLG_BOLD" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_12"
        android:orientation="horizontal">

        <vn.nip.kido.IControl.IButton
            android:id="@+id/submit"
            android:layout_width="@dimen/d_200"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d_4"
            android:background="@drawable/background_button_red"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/d_28"
            app:fontName="BRYANTLG_BOLD" />

    </LinearLayout>

</LinearLayout>