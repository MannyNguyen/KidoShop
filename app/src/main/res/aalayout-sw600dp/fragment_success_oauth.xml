<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Fragment.OAuth.SuccessOauthFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main"
            android:gravity="center"
            android:padding="@dimen/d_8"
            android:text="@string/signup_success"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/d_28" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/d_28"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:padding="@dimen/d_20"
            android:scaleType="centerInside"
            android:src="@drawable/ic_success" />

        <vn.nip.kido.IControl.ITextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/congratulation"
            android:textAllCaps="true"
            android:textColor="@color/main"
            android:textSize="@dimen/d_32"
            app:fontName="BRYANTLG_BOLD" />

        <vn.nip.kido.IControl.ITextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/success_content"
            android:textColor="@color/main_gray"
            android:gravity="center"
            android:textSize="@dimen/d_28"
            app:fontName="BRYANTLG_BOLD" />

        <vn.nip.kido.IControl.ITextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_8"
            android:text="@string/agree_license_6"
            android:textAllCaps="true"
            android:textColor="@color/main"
            android:textSize="@dimen/d_30"
            app:fontName="BRYANTLG_BOLD" />

        <vn.nip.kido.IControl.ITextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_8"
            android:gravity="center"
            android:text="@string/success_content_2"
            android:textColor="@color/main_black"
            android:textSize="@dimen/d_28"
            app:fontName="BRYANTLG_BOLD" />

        <vn.nip.kido.IControl.IButton
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_margin="@dimen/d_16"
            android:background="@drawable/background_button_red"
            android:text="@string/start"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/d_28"
            app:fontName="BRYANTLG_BOLD" />
    </LinearLayout>
</FrameLayout>