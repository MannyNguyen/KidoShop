<?xml version="1.0" encoding="utf-8"?>

<vn.nip.kido.IControl.ICardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/d_2"
    app:cardCornerRadius="@dimen/d_4"
    app:cardElevation="@dimen/d_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_news"
            android:layout_width="0dp"
            android:layout_height="@dimen/d_200"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d_2"
            android:layout_marginTop="@dimen/d_2"
            android:layout_marginRight="@dimen/d_2"
            android:layout_marginBottom="@dimen/d_2"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            android:padding="@dimen/d_8">

            <vn.nip.kido.IControl.ITextView
                android:id="@+id/txv_title_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="4"
                android:textColor="@color/main_black"
                android:textSize="@dimen/s_24"
                app:fontName="BRYANTLG_BOLD" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imv_delete_news"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="@dimen/d_8"
                    android:src="@drawable/delete_button"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imv_save_news"
                    android:layout_width="@dimen/d_80"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="@dimen/d_8"
                    android:src="@drawable/luu_icon"
                    android:visibility="visible" />

                <vn.nip.kido.IControl.ITextView
                    android:id="@+id/txt_saved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d_4"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="@dimen/d_8"
                    android:text="@string/saved"
                    android:textColor="@color/black"
                    android:background="@drawable/gray_box"
                    app:fontName="BRYANTLG_NORMAL"
                    android:textSize="@dimen/s_14"
                    android:visibility="gone" />

                <vn.nip.kido.IControl.ITextView
                    android:id="@+id/txv_create_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/d_4"
                    android:gravity="bottom"
                    android:lines="1"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/s_20" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</vn.nip.kido.IControl.ICardView>
