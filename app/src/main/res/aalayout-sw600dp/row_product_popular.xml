<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:layout_margin="@dimen/d_2"
    android:foreground="?android:selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/d_6"
    app:cardElevation="@dimen/d_4">

    <!--<ImageView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:adjustViewBounds="true"-->
    <!--android:scaleType="fitXY"-->
    <!--android:src="@drawable/bg_popular_product" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/d_4"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/iv_event"
                    android:layout_width="@dimen/d_60"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/d_4"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_km_tag" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <vn.nip.kido.IControl.ITextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:padding="@dimen/d_8"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:text="fgfdg"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/s_24"
                    app:fontName="BRYANTLG_BOLD" />

                <ImageView
                    android:id="@+id/add"
                    android:layout_width="@dimen/d_52"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/d_8"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_cart_inactive" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:background="@drawable/banner_popular"
            android:gravity="center"
            android:orientation="horizontal">

            <vn.nip.kido.IControl.ITextView
                android:id="@+id/kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="2"
                android:text="Bán Chạy"
                android:textColor="@color/white"
                android:textSize="@dimen/d_28"
                app:fontName="BRYANTLG_BOLD" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
